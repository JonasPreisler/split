<div style="background: #f3f2f2;padding:15px;border-radius:10px;color:#1c1c1c;" class="property-form">
<h1>New Property</h1>
  <%= simple_form_for(@property) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :address, placeholder: 'Address', label: false, class: "form-control" %><br />
      <%= f.input :description, placeholder: 'Description', label: false %><br />
      <br />
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon3" aria-describedby="basic-addon3">DKK </span>
         <%= f.input :price, placeholder: 'Price', label: false %>
      </div><br />


      Image: <%= f.file_field :image %><br />
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: 'button' %>
    </div>
  <% end %>

</div>
