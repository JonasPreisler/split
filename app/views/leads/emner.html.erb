<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<div class="desktopHide">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th><%= I18n.t "name" %></th>
        <th><%= I18n.t "property" %></th>
        <th><%= I18n.t "datedate" %></th>
        <th><%= I18n.t "timetime" %></th>
        <th><%= I18n.t "phone" %></th>
        <th>Email</th>
        <th>Tidsrum</th>
        <th>Purpose</th>
        <th>Type</th>
        <th>Price_filter</th>
        <th>Budget</th>
        <th>Område</th>
        <th>Kæledyr</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <% if current_user.secret == lead.secret and current_user.id == lead.user_id %>
          <td><%= lead.id %></td>
          <td><%= lead.first_name %> <%= lead.last_name %></td>
          <td><%= lead.property %></td>
          <td><%= lead.slot.date.strftime('%A, %b %y') if lead.slot_id? %></td>
          <td><%= lead.slot.time.strftime('%H:%M') if lead.slot_id? %></td>
          <td><%= lead.phone %></td>
          <td><%= lead.email if lead.email? %></td>
          <td><%= lead.deadline %></td>
          <td><%= lead.purpose %></td>
          <td><%= lead.category if lead.category? %></td>
          <td><%= lead.price_filter %></td>
          <td><%= lead.budget %></td>
          <td><%= lead.area %></td>
          <td><%= lead.pet %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div class="mobileHide">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= I18n.t "name" %></th>
        <th><%= I18n.t "property" %></th>
        <th><%= I18n.t "datedate" %></th>
        <th><%= I18n.t "timetime" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @leads.each do |lead| %>
        <tr>
          <% if current_user.secret == lead.secret and current_user.id == lead.user_id %>
          <td><%= lead.first_name %> <%= lead.last_name %></td>
          <td><%= lead.property %></td>
          <td><%= lead.slot.date.strftime('%A, %b %y') if lead.slot_id? %></td>
          <td><%= lead.slot.time.strftime('%H:%M') if lead.slot_id? %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

