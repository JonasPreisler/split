<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Property</th>
      <th>Date</th>
      <th>Time</th>
      <th>Phone</th>
      <th>Email</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <% if current_user.secret == lead.secret and current_user.id == lead.user_id %>
        <td><%= lead.id %></td>
        <td><%= lead.first_name %> <%= lead.last_name %></td>
        <td><%= lead.property %></td>
        <td><%= lead.slot.date.strftime('%A, %b %y') if lead.slot_id? %></td>
        <td><%= lead.slot.time.strftime('%H:%M') if lead.slot_id? %></td>
        <td><%= lead.phone %></td>
        <td><%= lead.email %></td>
        <td><%= lead.city %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lead', new_lead_path %>
